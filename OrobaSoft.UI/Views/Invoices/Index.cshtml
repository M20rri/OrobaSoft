@using OrobaSoft.Shared.DTOs
@model IEnumerable<InvoiceDto>
@{
    Layout = "_Layout";
}
<h2>Invoices</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Invoice Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.CustomerName</td>
                <td>@invoice.InvoiceDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = invoice.Id })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = invoice.Id })">Details</a> |
                    <a href="@Url.Action("Delete", new { id = invoice.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>